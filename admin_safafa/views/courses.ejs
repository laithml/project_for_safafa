<!-- Create Modal -->
<div id="createCourseModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Course</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="createCourseForm">
                    <div class="form-group">
                        <label for="newCourseName">Course Name:</label>
                        <input type="text" class="form-control" id="newCourseName" required>
                    </div>
                    <div class="form-group">
                        <label for="newCourseImage">Course Image URL:</label>
                        <input type="text" class="form-control" id="newCourseImage" required>
                    </div>
                    <div class="form-group">
                        <label for="newCoursePrice">Course Price:</label>
                        <input type="text" class="form-control" id="newCoursePrice" required>
                    </div>
                    <div class="form-group">
                        <label for="newCourseAge">Course Age Limit:</label>
                        <input type="number" class="form-control" id="newCourseAge" value="0" required>
                    </div>
                    <div class="form-group">
                        <label for="newCourseCapacity">Course Capacity Limit:</label>
                        <input type="number" class="form-control" id="newCourseCapacity"  required>
                    </div>
                    <div class="form-group">
                        <label for="newCourseDescription">Course Description:</label>
                        <textarea class="form-control" id="newCourseDescription" rows="3" required></textarea>
                    </div>
                    <button id="submit" class="btn btn-primary">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>



<!-- Edit Course Modal -->
<div class="modal fade" id="editCourseModal" tabindex="-1" role="dialog" aria-labelledby="editCourseModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editCourseModalLabel">Edit Course</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input id="courseId" hidden>
                <form id="editCourseForm">
                    <div class="form-group">
                        <label for="courseName">Course Name</label>
                        <input type="text" class="form-control" id="courseName" placeholder="Enter course name">
                    </div>
                    <div class="form-group">
                        <label for="courseImage">Course Image URL</label>
                        <input type="text" class="form-control" id="courseImage" placeholder="Enter course image URL">
                    </div>
                    <div class="form-group">
                        <label for="coursePrice">Course Price</label>
                        <input type="number" class="form-control" id="coursePrice" placeholder="Enter course price">
                    </div>
                    <div class="form-group">
                        <label for="courseLimit">Course Age Limit</label>
                        <input type="number" class="form-control" id="courseLimit"  placeholder="Enter course Age Limit">
                    </div>
                    <div class="form-group">
                        <label for="courseCapacity">Course Capacity Limit</label>
                        <input type="number" class="form-control" id="courseCapacity"  placeholder="Enter course Capacity Limit">
                    </div>
                    <div class="form-group">
                        <label for="courseDescription">Course Description</label>
                        <textarea class="form-control" id="courseDescription" rows="3" placeholder="Enter course description"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <button class="btn btn-primary" id="saveChangesBtn">Save Changes</button>
            </div>
        </div>
    </div>
</div>


